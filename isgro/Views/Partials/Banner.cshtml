@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var bannerMedia = Model.Value<IPublishedContent>("b_media");
    var bannerType = bannerMedia?.ContentType.Alias;
    var bannerMobileMedia = Model.Value<IPublishedContent>("b_mobileMedia");
    var bannerMobileType = bannerMobileMedia?.ContentType.Alias;
}
@if (bannerMedia != null || bannerMobileMedia!=null)
{
    <section class="banner @(bannerMedia!=null?"":"only-mobile")">
        <div class="banner_wraper">
            <div class="banner_item video_wraper @(bannerMobileMedia!=null?"hide-on-mobile":"")">
                @if (bannerType=="Image")
                {
                    <div class="banner_img bg-img" style="background: url(@bannerMedia.Url())"></div>
                }
                else
                {
                    <video class="banner_video">
                        <source src="@bannerMedia.Url()">
                        Your browser does not support the video tag.
                    </video>
                    <button type="button" class="play">
                        <img src="~/assets/icons/play.svg"/>
                    </button>
                }
            </div>
            @if (bannerMobileMedia != null)
            {
                <div class="banner_item video_wraper show-on-mobile">
                    @if (bannerMobileType == "Image")
                    {
                        <div class="banner_img bg-img" style="background: url(@bannerMobileMedia.Url())"></div>
                    }
                    else
                    {
                        <video class="banner_video" autoplay loop muted>
                          <source src="@bannerMobileMedia.Url()" type="video/mp4">
                          Your browser does not support the video tag.
                        </video>

                        <button type="button" class="play">
                            <img src="~/assets/icons/play.svg" />
                        </button>
                    }
                </div>
            }
        </div>
    </section>
}